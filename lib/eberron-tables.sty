% Default table setup
%%%%%
\RequirePackage{caption}
\RequirePackage{float}
\captionsetup[table]{justification=raggedright, font={sf, bf, Large, color=concept}, skip=0.5ex}


\newcommand\HeadRow{\rowfont{\noindent\sffamily\bfseries\color{black}}\rowcolor{white}}
\newcommand\RowColors{\rowcolors{2}{tablewhite}{tablegrey}}

\newenvironment{EberronTable}[1]{%
    \par \vspace*{8pt} \noindent \RowColors
    \begin{longtabu} to \linewidth {#1}
    \HeadRow
  }
{\end{longtabu}}


